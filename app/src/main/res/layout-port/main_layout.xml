<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">
    <LinearLayout
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/bufferField"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:textSize="20sp"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/operationField"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="20sp"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <EditText
            android:id="@+id/inputField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
        <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/clear"
                android:onClick="onClearClick" tools:ignore="ButtonStyle"/>
        <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/erase"
                android:onClick="onEraseClick" tools:ignore="ButtonStyle"/>
        <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/modulo"
                android:id="@+id/modulo"
                android:onClick="onBinaryOperationClick" tools:ignore="ButtonStyle"/>
        <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/divide"
                android:text="@string/divide"
                android:onClick="onBinaryOperationClick" tools:ignore="ButtonStyle"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
        <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/_7"
                android:onClick="onNumberClick" tools:ignore="ButtonStyle"/>
        <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/_8"
                android:onClick="onNumberClick" tools:ignore="ButtonStyle"/>
        <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/_9"
                android:onClick="onNumberClick" tools:ignore="ButtonStyle"/>
        <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/multiplicate"
                android:id="@+id/multiply"
                android:onClick="onBinaryOperationClick" tools:ignore="ButtonStyle"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/_4"
                android:onClick="onNumberClick" tools:ignore="ButtonStyle"/>
        <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/_5"
                android:onClick="onNumberClick" tools:ignore="ButtonStyle"/>
        <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/_6"
                android:onClick="onNumberClick" tools:ignore="ButtonStyle"/>
        <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/minus"
                android:id="@+id/minus"
                android:onClick="onBinaryOperationClick" tools:ignore="ButtonStyle"/>

    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/_1"
                android:onClick="onNumberClick" tools:ignore="ButtonStyle"/>
        <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/_2"
                android:onClick="onNumberClick" tools:ignore="ButtonStyle"/>
        <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/_3"
                android:onClick="onNumberClick" tools:ignore="ButtonStyle"/>
        <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/plus"
                android:id="@+id/plus"
                android:onClick="onBinaryOperationClick" tools:ignore="ButtonStyle"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/_0"
                android:onClick="onNumberClick" tools:ignore="ButtonStyle"/>
        <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/point"
                android:onClick="onPointClick" tools:ignore="ButtonStyle"/>
        <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/pi"
                android:id="@+id/pi"
                android:onClick="onFunctionalKeyClick" tools:ignore="ButtonStyle"/>
        <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/equals"
                android:id="@+id/equals"
                android:onClick="onFunctionalKeyClick" tools:ignore="ButtonStyle"/>

    </LinearLayout>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Додаткові функції:"/>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/sinus"
                android:id="@+id/sinus"
                android:onClick="onUnaryOperationClick" tools:ignore="ButtonStyle"/>
        <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/cosinus"
                android:id="@+id/cosinus"
                android:onClick="onUnaryOperationClick" tools:ignore="ButtonStyle"/>
        <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/tangens"
                android:id="@+id/tangens"
                android:onClick="onUnaryOperationClick" tools:ignore="ButtonStyle"/>
        <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/cotangens"
                android:id="@+id/cotangens"
                android:onClick="onUnaryOperationClick" tools:ignore="ButtonStyle"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/sqrt"
                android:id="@+id/sqrt"
                android:onClick="onUnaryOperationClick" tools:ignore="ButtonStyle"/>
        <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/power"
                android:id="@+id/power"
                android:onClick="onBinaryOperationClick" tools:ignore="ButtonStyle"/>
        <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/log"
                android:id="@+id/log"
                android:onClick="onBinaryOperationClick" tools:ignore="ButtonStyle"/>
    </LinearLayout>

</LinearLayout>
